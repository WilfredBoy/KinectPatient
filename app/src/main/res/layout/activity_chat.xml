<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey">
    <com.qg.kinectpatient.view.TopbarL
        android:id="@+id/chat_topbar"
        android:layout_width="match_parent"
        android:layout_height="56dp">
    </com.qg.kinectpatient.view.TopbarL>
    <Button
        android:id="@+id/chat_record_btn"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/record_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chat_topbar"
        android:layout_above="@+id/chat_record_btn">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
